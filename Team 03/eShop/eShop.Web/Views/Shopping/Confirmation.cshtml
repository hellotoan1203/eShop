
@{
	ViewBag.Title = "Confirmation";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
	var imgs = ViewBag.Image;
}
<style>
	.confirmation a{
		color:cornflowerblue;
	}
</style>
<div class="container">
	<div class="card mt-5 mb-5 p-5" style="height:500px;">
		<div class="row">
			<div class="col-md-4 confirmation">
				<h2>Confirmation</h2>
				<p>Art. Thank you for your order</p>
				<p>Your order number is <b>@ViewBag.TotalPrice</b></p>
				<p class="mb-5">Please make a note of it</p>
				<p><a href="@Url.Action("Index","Home")">Click Here </a>to return to home page</p>
				<p><a href="@Url.Action("Index","Product")">Click Here </a>to return to out art</p>
			</div>
			<div class="col-md-4">
				<div>
					<p>Greate new! Your art Work will be shipping today</p>
				</div>
			</div>
			<div class="col-md-3 carousel slide" data-ride="carousel">
				<!-- The slideshow -->
				<div class="carousel-inner">
					@{
						for (int i = 0; i < imgs.Count; i++)
						{
							if (i == 0)
							{
								<div class="carousel-item active">
									<img src="~/Content/images/Products/@imgs[i]" alt="LIamgs" style="width: 100%;">
								</div>
							}
							else
							{
								<div class="carousel-item">
									<img src="~/Content/images/Products/@imgs[i]" alt="LIamgs" style="width: 100%;">
								</div>
								}
							}
						}
						@*<div class="carousel-item active">
							<img src="~/Content/images/Van_Gogh_starry-night1.jpg" alt="Los Angeles">
						</div>
						<div class="carousel-item">
							<img src="~/Content/images/Van_Gogh_sunflowers1.jpg" alt="Chicago">
						</div>
						<div class="carousel-item">
							<img src="~/Content/images/Rembrandt_Christ_In_The_Storm_On_The_Sea_Of_Galilee1.jpg" alt="New York">
						</div>*@
					</div>
				</div>
			</div>
		</div>

	</div>


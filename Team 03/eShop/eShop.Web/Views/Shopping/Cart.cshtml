@model List<eShop.Web.Models.ShoppingCart>
@{
	ViewBag.Title = "Cart";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
	var totalAmount = ViewBag.TotalPrice;
}
@section scripts{
	<script src="~/Content/js/minicart.js"></script>
	<script src="~/Content/js/getCart.js"></script>
	<script src="~/Content/js/ShoppingCart.js"></script>
}

<link href="~/Content/css/checkout.css" rel="stylesheet" />
<div class="cartContainer py-lg-5 py-md-4 py-sm-4 py-3 mb-5">
	<div class="privacy about">
		<h4>Your shopping cart contains: <span id="cartItemCount"></span></h4>
		<div class="checkout-right row mt-5">
			<div class="col-md-9">
				<table class="timetable_sub">
					<thead>
						<tr>
							<th style="width:20%;">Product</th>
							<th style="width:180px;">Quantity</th>
							<th>Product Name</th>
							<th>Price</th>
							<th>Remove</th>
						</tr>
					</thead>
					<tbody id="cartTBody"></tbody>
				</table>
				@*<button class="submit check_out" id="btnCheckOut">Check Out</button>
				<button class="submit check_out mr-2" id="btnContinue">Continue Shopping</button>*@
			</div>
			<div class="col-md-3">
				<button class="btn submit check_out mb-2 mt-0" id="btnContinue">Continue Shopping</button>
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Total Amount</h4>
						<p class="card-text"></p>
					</div>
				</div>

				<button class="btn submit check_out" id="btnCheckOut">Check Out</button>
			</div>
		</div>
	</div>
	<!-- //top products -->
</div>
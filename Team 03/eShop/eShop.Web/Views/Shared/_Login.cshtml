<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="register-form">
                    @using (Ajax.BeginForm("Login", "Account", new AjaxOptions
                    {
                        HttpMethod = "POST",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "login-error",
                        OnSuccess = "loginSuccess",
                        OnFailure = "loginFailure"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="fields-grid">
                            <div class="styled-input">
                                <input type="text" placeholder="User Name" name="UserName" required>
                                <div style="color: red" id="login-error"></div>
                            </div>
                            <div class="styled-input">
                                <input type="password" placeholder="Password" name="Password" required>
                            </div>
                            <div class="styled-input">
                                <input type="checkbox" name="RememberMe">&nbsp;Remember Me?
                            </div>
                            <button type="submit" class="btn subscrib-btnn">Login</button>

                        </div>
                    }
                    @*@using (Html.BeginForm("External", "Account", new { ReturnUrl = Request.Url.PathAndQuery}, FormMethod.Post))
                    {
                        <button type="submit" class="btn btnFacebook">
                            <i class="fab fa-facebook"></i>
                        </button>
                    }*@
                </div>
            </div>
			<div class="modal-footer">
				@using (Html.BeginForm("External", "Account", new { ReturnUrl = Request.Url.PathAndQuery }, FormMethod.Post))
				{
					<button type="submit" class="btn btnFacebook">
						<i class="fab fa-facebook"></i> Connect With Facebook
					</button>
				}
				<span> | </span>
				<a class="mr-auto" style="color: black" href="@Url.Action("Register", "Account")">Register</a>
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function loginSuccess(data) {
        if (data == "Success") {
            window.location.reload();
        }
    }
    function loginFailure(data) {

    }
</script>